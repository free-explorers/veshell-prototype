{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"isBackground": true,
			"label": "embedder run",
			"options": {
				"cwd": "${workspaceFolder}/embedder"
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"isBackground": true,
			"label": "embedder build",
			"options": {
				"cwd": "${workspaceFolder}/embedder"
			}
		},
		{
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"veshell",
				"build"
			],
			"label": "build veshell",
		},
		{
			"type": "dart",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"watch"
			],
			"problemMatcher": [
				"$dart-build_runner"
			],
			"group": "build",
			"label": "build_runner watch",
			"detail": "shell",
			"options": {
				"cwd": "${workspaceFolder}/shell"
			},
			"isBackground": true,
			"dependsOn": "build veshell",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clean debug session",
			"command": "kill $(cat ${workspaceFolder}/process.pid) || true",
			"type": "shell",
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
				"showReuseMessage": false,
				"echo": false,
				"close": true
			},
		},
		{
			"label": "Terminate All Tasks",
			"command": "echo ${input:terminate}",
			"type": "shell",
			"problemMatcher": [],
			"dependsOn": "clean debug session",
			"presentation": {
				"reveal": "silent",
				"showReuseMessage": false,
			}
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		}
	]
}